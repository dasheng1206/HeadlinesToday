<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="功能"
        android:textSize="25dp"
        android:background="#f00000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qq_sdk_login" />

        <ImageView
            android:id="@+id/image_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weixin_sdk_login" />

        <ImageView
            android:id="@+id/image_xinlang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sina_sdk_login" />
    </LinearLayout>
    <Button
        android:id="@+id/shouji"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" 点击手机验证>>"
        android:textSize="20dp"
        />

</LinearLayout>
